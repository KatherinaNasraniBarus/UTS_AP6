#include <iostream>
using namespace std;
int main() 
{
    int rows, b = 1;

    cout << "Masukkan rows: ";
    cin >> rows;

   
    for (int i = 1; i <= rows; i++) {
        
        for (int j = 1; j <= i; j++) {
            cout << b << " ";
            b++;
        }
        cout << endl; 
    }

    return 0;
}
